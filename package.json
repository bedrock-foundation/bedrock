{
  "name": "bedrock",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --stream --parallel dev",
    "dev:lib": "pnpm -r --stream --parallel --filter=!./packages/example/** dev",
    "build:lib": "pnpm -r --filter=!./packages/example/** build",
    "publish": "pnpm -r --filter=!./packages/example/** publish --tolerate-republish",
    "clean": "pnpm -r clean",
    "clean:node": "rm -rf node_modules; rm -rf packages/*/node_modules; rm -rf packages/example/*/node_modules",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "react": "17.0.1"
  }
}
