{
  "name": "bedrock",
  "private": true,
  "scripts": {
    "dev": "lerna bootstrap && lerna run dev --parallel",
    "republish": "lerna publish from-package --yes",
    "clean": "lerna clean --y",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "build": "cd ./packages/sdk && yarn build && cd ../react-sdk && yarn build && cd ../server && yarn build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "react": "17.0.1"
  },
  "workspaces": {
    "packages": [
      "packages/example/create-react-app",
      "packages/example/express",
      "packages/example/nextjs",
      "packages/marketing",
      "packages/sdk",
      "packages/server",
      "packages/react-sdk"
    ]
  },
  "packageManager": "yarn@3.1.1"
}
