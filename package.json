{
  "name": "bedrock",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach -pitv run build",
    "dev": "yarn workspaces foreach run dev",
    "dev:lib": "yarn workspaces foreach -piv --no-private run dev",
    "build:lib": "yarn workspaces foreach -pitv --no-private run build",
    "publish": "yarn workspaces foreach -pv --no-private npm publish --tolerate-republish",
    "clean": "yarn workspaces foreach -pt run clean",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "react": "17.0.1"
  },
  "workspaces": {
    "packages": [
      "packages/sdk",
      "packages/react-sdk",
      "packages/server",
      "packages/example/create-react-app",
      "packages/example/express",
      "packages/example/nextjs",
      "packages/marketing"
    ]
  },
  "packageManager": "yarn@3.2.1"
}
