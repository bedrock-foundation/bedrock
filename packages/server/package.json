{
    "name": "@bedrock-foundation/server",
    "version": "0.0.15",
    "description": "Bedrock Server",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "sideEffects": false,
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.mjs",
    "types": "lib/types/index.d.ts",
    "files": [
        "lib",
        "src",
        "LICENSE"
    ],
    "directories": {
        "test": "test"
    },
    "exports": {
        "import": "./lib/esm/index.mjs",
        "require": "./lib/cjs/index.js"
    },
    "scripts": {
        "watch": "npm run build",
        "dev": "npm-watch watch",
        "clean": "rm -rf lib/*",
        "build": "tsc -p tsconfig.json && tsc-esm -p tsconfig.json && tsc -p tsconfig.cjs.json",
        "postbuild": "echo '{\"type\":\"commonjs\"}' | npx json > lib/cjs/package.json && echo '{\"type\":\"module\"} ' | npx json > lib/esm/package.json"
    },
    "watch": {
        "patterns": [
            "src"
        ],
        "quiet": false,
        "legacyWatch": true,
        "extensions": "ts, js, tsx"
    },
    "author": "sam@bedrock.fyi",
    "license": "ISC",
    "dependencies": {
        "@bedrock-foundation/jsurl": "^1.0.1",
        "@bedrock-foundation/sdk": "workspace:*",
        "@metaplex-foundation/js-next": "^0.9.0",
        "@socket.io/redis-adapter": "^7.2.0",
        "@solana/pay": "^0.2.0",
        "@solana/spl-token": "^0.2.0",
        "@solana/web3.js": "^1.44.0",
        "bignumber.js": "^9.0.2",
        "body-parser": "^1.19.0",
        "bs58": "^5.0.0",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "fs-extra": "^8.1.0",
        "joi": "^17.4.0",
        "jsonwebtoken": "^8.5.1",
        "jsurl": "^0.1.5",
        "mocha": "^8.4.0",
        "redis": "^4.1.0",
        "socket.io": "^4.5.1",
        "ws": "^8.7.0"
    },
    "devDependencies": {
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^4.2.3",
        "@types/debug": "^4.1.7",
        "@types/express": "^4.17.13",
        "@types/fs-extra": "^8.1.2",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/jsurl": "^1.2.30",
        "@types/long": "^3.0.32",
        "@types/mocha": "^2.2.44",
        "@types/node": "^17.0.34",
        "@types/node-fetch": "^2.6.1",
        "npm-watch": "^0.11.0",
        "ts-loader": "^5.4.5",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.6.4",
        "typescript-esm": "^2.0.0"
    },
    "installConfig": {
        "hoistingLimits": "workspaces"
    }
}
